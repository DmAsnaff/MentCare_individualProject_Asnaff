<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <!-- Calendar View -->

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:text="Self Care"
        android:textColor="@color/text2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="350dp"
        android:layout_height="160dp"


        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:background="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="Mood Today"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/bg"
            android:ems="10"
            android:inputType="date"
            android:textColor="@color/text" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="93dp"
            android:layout_marginTop="90dp"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/greatbutton" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="98dp"
            android:text="Great Today"
            android:textColor="@color/text2"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="230dp"
            android:layout_marginTop="560dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:background="@drawable/custombutton1"
            android:text="" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="230dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/custombutton1"
            android:layout_marginTop="560dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:text="" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Books"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="745dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="545dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/reading" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="155dp"
        android:layout_height="242dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="550dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/breathing" />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excercise"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="745dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>
