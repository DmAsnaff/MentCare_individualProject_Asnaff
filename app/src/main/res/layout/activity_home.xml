<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@color/bg">


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="162dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/chb" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="45dp"
            android:text="Talk with MentB"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="211dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/Button1"
            android:text="Let's Talk" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="420dp"
        android:layout_height="72dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageButton
                android:id="@+id/homebutton"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:contentDescription="Home"
                android:layout_marginTop="13dp"
                android:scaleType="fitCenter"
                android:tint="@color/Button2"
                app:srcCompat="@drawable/baseline_home_24" />

            <ImageButton
                android:id="@+id/carebutton"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:layout_marginTop="13dp"

                android:contentDescription="Selfcare"
                android:scaleType="fitCenter"
                android:tint="@color/Button2"

                app:srcCompat="@drawable/baseline_self_improvement_24" />

            <ImageButton
                android:id="@+id/locationbutton"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:layout_marginTop="13dp"

                android:contentDescription="Location"
                android:scaleType="fitCenter"
                android:tint="@color/Button2"

                app:srcCompat="@drawable/baseline_location_pin_24" />

            <ImageButton
                android:id="@+id/historybutton"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:contentDescription="History"
                android:layout_marginTop="13dp"

                android:scaleType="fitCenter"
                android:tint="@color/Button2"

                app:srcCompat="@drawable/baseline_work_history_24" />

            <ImageButton
                android:id="@+id/profilebutton"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:layout_marginTop="13dp"

                android:background="#00FFFFFF"
                android:contentDescription="profile"
                android:scaleType="fitCenter"
                android:tint="@color/Button2"

                app:srcCompat="@drawable/baseline_person_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/Button2"
                android:layout_weight="1"
                android:text=" Home" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/Button2"
                android:layout_weight="1"
                android:text="SelfCare" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/Button2"
                android:layout_weight="1"
                android:text="NearBy" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/Button2"
                android:text="History" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/Button2"
                android:text="Profile" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>